{
  "version": 2,
  "builds": [
    {
      "src": "./backend/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend"
    },
    {
      "source": "/public/app-preview.jpg",
      "destination": "/app-preview.jpg"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}